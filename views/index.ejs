<!DOCTYPE html>
<html>
<head>
    <title>Blog</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Blog Posts</h1>
    <a href="/create">Create New Post</a>
    <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p>By <%= post.author %> on <%= post.date %></p>
                <p><%= post.content %></p>
                <a href="/edit/<%= post.id %>">Edit</a>
                <a href="/delete/<%= post.id %>">Delete</a>
            </div>
        <% }) %>
    <% } else { %>
        <p>No posts available</p>
    <% } %>
</body>
</html>
